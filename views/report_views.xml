<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Report Tree View -->
    <record id="view_report_tree" model="ir.ui.view">
        <field name="name">report.tree</field>
        <field name="model">report</field>
        <field name="arch" type="xml">
            <tree string="Reports" 
                  decoration-danger="not expected_close_date and current_status.name != 'Completed'" 
                  decoration-success="current_status.name == 'Completed'" 
                  decoration-info="current_status.name == 'In Progress'">
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="activity"/>
                <field name="time_taken"/>
                <field name="current_status" widget="badge"/>
                <field name="expected_close_date"/>
                <field name="to_work_on"/>
                <field name="remarks_if_any"/>
                <field name="employee_id"/>
            </tree>
        </field>
    </record>

    <!-- Report Form View -->
    <record id="view_report_form" model="ir.ui.view">
        <field name="name">report.form</field>
        <field name="model">report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="task_id"/>
                            <field name="activity"/>
                            <field name="time_taken"/>
                        </group>
                        <group>
                            <field name="current_status"/>
                            <field name="expected_close_date"/>
                            <field name="to_work_on"/>
                            <field name="remarks_if_any"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Report Search View -->
    <record id="view_report_search" model="ir.ui.view">
        <field name="name">report.search</field>
        <field name="model">report</field>
        <field name="arch" type="xml">
            <search>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="activity"/>
                <field name="current_status"/>
                <field name="employee_id"/>
                <filter string="Completed" name="completed" 
                        domain="[('current_status.name', '=', 'Completed')]"/>
                <filter string="In Progress" name="in_progress" 
                        domain="[('current_status.name', '=', 'In Progress')]"/>
                <filter string="Pending" name="pending" 
                        domain="[('current_status.name', 'not in', ['Completed', 'In Progress'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'current_status'}"/>
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Report Action -->
    <record id="action_report" model="ir.actions.act_window">
        <field name="name">Task Reports</field>
        <field name="res_model">report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No task reports found!
            </p>
            <p>
                Task reports are created as part of daily work reports.
            </p>
        </field>
    </record>
</odoo>