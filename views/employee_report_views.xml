<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Employee Report Tree View -->
    <record id="view_employee_report_tree" model="ir.ui.view">
        <field name="name">employee.report.tree</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <tree string="Employee Reports" decoration-info="state == 'draft'" 
                  decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="department_id"/>
                <field name="reporting_manager_id"/>
                <field name="summary"/>
                <field name="date"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'approved'" 
                       decoration-danger="state == 'rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Employee Report Search View -->
    <record id="view_employee_report_search" model="ir.ui.view">
        <field name="name">employee.report.search</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <search string="Employee Reports">
                <filter string="My Reports" name="my_report" 
                        domain="[('name.user_id', '=', uid)]"/>
                <filter string="My Team" name="my_team"
                        domain="['|', ('name.parent_id.user_id', '=', uid), ('reporting_manager_id.user_id', '=', uid)]"/>
                <filter string="Today's Reports" name="today_report" 
                        domain="[('date', '=', context_today())]"/>
                <filter string="Reports to Me" name="reporting_to_me" 
                        domain="[('reporting_manager_id.user_id', '=', uid)]"/>
                <filter string="Pending Team Reports" name="pending_team_reports"
                        domain="['&amp;', ('state', '=', 'submitted'), '|', ('name.parent_id.user_id', '=', uid), ('reporting_manager_id.user_id', '=', uid)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <separator/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="reporting_manager_id"/>
                <field name="state"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'name'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Reporting Manager" name="group_by_reporting_manager" 
                            context="{'group_by': 'reporting_manager_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Employee Report Form View -->
    <record id="view_employee_report_form" model="ir.ui.view">
        <field name="name">employee.report.form</field>
        <field name="model">employee.report</field>
        <field name="arch" type="xml">
            <form string="Employee Report">
                <field name="is_manager" invisible="1"/>
                <field name="is_director" invisible="1"/>
                <field name="is_hod" invisible="1"/>
                <field name="is_own_report" invisible="1"/>
                <field name="available_manager_ids" invisible="1"/>
                <header>
                    <button name="action_submit" string="Submit" type="object" 
                            invisible="is_manager or state != 'draft'"
                            class="oe_highlight btn-primary"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="oe_highlight"
                            invisible="state != 'submitted' or is_own_report"
                            groups="daily_work_report.group_user,daily_work_report.group_staff_manager,daily_work_report.group_hod,daily_work_report.group_directors"/>
                    <button name="action_reject" string="Reject" type="object" 
                            class="btn-danger"
                            invisible="state != 'submitted' or is_own_report"
                            groups="daily_work_report.group_user,daily_work_report.group_staff_manager,daily_work_report.group_hod,daily_work_report.group_directors"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,approved"
                           statusbar_colors='{"draft":"blue","submitted":"orange","approved":"green","rejected":"red"}'/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Approved" bg_color="bg-success"
                            invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="bg-danger"
                            invisible="state != 'rejected'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Employee Name" 
                                   options="{'no_open': True}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="department_id" options="{'no_open': True}" readonly="1"/>
                            <field name="total_work_hours"/>
                            <field name="is_half_day" invisible="1"/>
                            <field name="total_work_minutes" invisible="1"/>
                        </group>
                        <group>
                            <field name="branch_id" options="{'no_open': True}" readonly="1"/>
                            <field name="actual_work_hours"/>
                            <field name="date" readonly="not is_director"/>
                            <field name="reporting_manager_id" 
                                   domain="[('id', 'in', available_manager_ids)]" 
                                   options="{'no_create': True}" 
                                   readonly="state != 'draft'" 
                                   placeholder="Select reporting manager..."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Daily Tasks" name="daily_tasks">
                            <field name="report_ids" readonly="state != 'draft'" mode="tree">
                                <tree editable="bottom" 
                                      decoration-success="current_status.name == 'Completed'"
                                      decoration-info="current_status.name == 'In Progress'"
                                      decoration-warning="current_status.name not in ['Completed', 'In Progress']">
                                    <field name="sequence" widget="handle"/>
                                    <field name="project_id"/>
                                    <field name="task_id"/>
                                    <field name="activity"/>
                                    <field name="time_taken" required="1"/>
                                    <field name="current_status" required="1" options="{'no_create': True}"/>
                                    <field name="to_work_on"/>
                                    <field name="expected_close_date"/>
                                    <field name="remarks_if_any"/>
                                </tree>
                            </field>
                            <group>
                                <field name="summary" readonly="state != 'draft'" 
                                       class="oe_inline" placeholder="Enter summary here..."/>
                            </group>
                            <group>
                                <group>
                                    <field name="prepared_by" options="{'no_open': True}" readonly="1"/>
                                    <field name="submitted_time"/>
                                </group>
                                <group>
                                    <field name="approved_by" options="{'no_open': True}" readonly="1"/>
                                    <field name="approved_time"/>
                                </group>
                            </group>
                        </page>
                        <page string="Concerns" name="concerns">
                            <group>
                                <field name="student_concerns" 
                                       placeholder="Enter any student related concerns..." 
                                       readonly="state != 'draft'"/>
                                <field name="employee_concerns" 
                                       placeholder="Enter any employee related concerns..." 
                                       readonly="state != 'draft'"/>
                                <field name="other_concerns" 
                                       placeholder="Enter any other concerns..." 
                                       readonly="state != 'draft'"/>
                            </group>
                            <div class="oe_button_box" name="button_box">
                                <button name="action_quick_create_concern" type="object" 
                                        class="oe_stat_button" icon="fa-exclamation-triangle"
                                        invisible="not (student_concerns or employee_concerns or other_concerns)"
                                        groups="daily_work_report.group_concern_managers">
                                    <div class="o_field_widget o_stat_info">
                                        <span class="o_stat_text">Create</span>
                                        <span class="o_stat_text">Action</span>
                                    </div>
                                </button>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Employee Report Action -->
    <record id="action_employee_report" model="ir.actions.act_window">
        <field name="name">Employee Reports</field>
        <field name="res_model">employee.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_report': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first daily work report!
            </p>
            <p>
                Track your daily tasks, time spent, and progress status.
                Submit reports to your manager for approval.
            </p>
        </field>
    </record>
</odoo>