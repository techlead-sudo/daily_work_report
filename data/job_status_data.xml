<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Job Statuses -->
        <record id="job_status_completed" model="job.status">
            <field name="name">Completed</field>
            <field name="sequence">1</field>
            <field name="color">10</field>
        </record>

        <record id="job_status_in_progress" model="job.status">
            <field name="name">In Progress</field>
            <field name="sequence">2</field>
            <field name="color">4</field>
        </record>

        <record id="job_status_pending" model="job.status">
            <field name="name">Pending</field>
            <field name="sequence">3</field>
            <field name="color">2</field>
        </record>

        <record id="job_status_blocked" model="job.status">
            <field name="name">Blocked</field>
            <field name="sequence">4</field>
            <field name="color">1</field>
        </record>

        <record id="job_status_cancelled" model="job.status">
            <field name="name">Cancelled</field>
            <field name="sequence">5</field>
            <field name="color">8</field>
        </record>

        <record id="job_status_on_hold" model="job.status">
            <field name="name">On Hold</field>
            <field name="sequence">6</field>
            <field name="color">6</field>
        </record>
    </data>
</odoo>